                                                </div>
                                            <p class="text-muted small mt-2">@item.ProductDescription</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                <span style="color: #7fad39;" class="price fw-bold">Rs: @item.ProductPrice</span>
                                                <a href="@Url.Action("Shop_details","web",new{item.Product_id})" style="background-color: #7fad39; color: white;" class="btn btn px-3 py-1 rounded-pill">View Details</a>
