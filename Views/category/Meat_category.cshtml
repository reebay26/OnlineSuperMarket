
@{
    ViewData["Title"] = "Meat_category";
    Layout = "~/Views/Shared/weblayout.cshtml";
}

<link rel="stylesheet" href="~/categorypg_styling/css/bootstrap.min.css">

<!-- Libraries Stylesheet -->
<link href="~/categorypg_styling/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
<link href="~/categorypg_styling/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link href="~/categorypg_styling/css/style.css" rel="stylesheet"    >

<style>
    .owl-carousel .hero__item,
    .owl-carousel .hero__item2,
    .owl-carousel .hero__item3,
    .owl-carousel .hero__item4 {
        position: relative;
        width: 100%;
        height: 500px; /* Adjust height as needed */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        object-fit: contain;
    }

    .hero__item img {
        width: 100%;
        height: 100%;
        object-fit: contain; /* Ensures full image is visible without cropping */
    }

    .hero__item {
        background-image: url('/img/WhatsApp\ Image\ 2025-02-11\ at\ 1.25.51\ AM.jpeg'); /* Add actual image paths */
    }

    .hero__item2 {
        background-image: url('/img/WhatsApp\ Image\ 2025-02-11\ at\ 12.21.44\ AM.jpeg');
    }

    .hero__item3 {
        background-image: url('/img/WhatsApp\ Image\ 2025-02-11\ at\ 12.38.21\ AM.jpeg');
    }

    .hero__item4 {
        background-image: url('/img/WhatsApp\ Image\ 2025-02-11\ at\ 2.49.40\ AM.jpeg');
    }
</style>

<!-- Fruits Shop Start-->
