<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row g-4 ">


            @if (ViewBag.storedproduct != null)
            {
                @foreach (var items in ViewBag.storedproduct)
                {
                    <div class="col-md-4 my-4">
                        <div class="product-card bg-white rounded-4 shadow-sm p-3 h-100 d-flex flex-column">
                            <span class="badge text-white bg-danger position-absolute">New</span>
                            <img src="~/ProductImages/@items.ProductImage" class="product-image w-100 rounded mb-3" style="object-fit: cover; height: 200px;" alt="Product">
                            <div class="p-3 flex-grow-1">
                                <h6 class="fw-bold">@items.ProductName</h6> 
                                <p class="text-muted small mt-2">@items.ProductDescription</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="color: #7fad39;" class="price fw-bold">Rs: @items.ProductPrice</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</section>
<!-- Featured Section End -->
