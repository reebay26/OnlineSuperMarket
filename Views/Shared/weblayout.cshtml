            fetch(`/Cart/UpdateCart?cartId=${cartId}&quantity=${quantity}`, { method: "POST" })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                location.reload();
            });
        }

        function removeItem(cartId) {
            fetch(`/Cart/RemoveFromCart?cartId=${cartId}`, { method: "POST" })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                location.reload();
            });
        }
    </script>


  
